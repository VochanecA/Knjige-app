<div id="welcome-container" class="bg-image-container">
  <div class="text-center" style="color: black;">Dobrodosli u jednostavnu online biblioteku</div>

  <div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-2 g-4 justify-content-center">
      <% randomBooks.slice(0, 4).forEach(book => { %>
        <div class="col">
          <div class="product-card" style="position: relative; box-shadow: 0 2px 7px #dfdfdf; background: #fafafa; height: 100%;">
            <a href="/admin/bookDetails/<%= book._id %>" style="display: block; position: relative;">
              <% if (book.stock === 0) { %>
                <div class="badge" style="position: absolute; left: 0; bottom: 0; z-index: 1; text-transform: uppercase; font-size: 13px; font-weight: 700; background: red; color: #fff; padding: 3px 10px;">Nije dostupno</div>
              <% } else if (book.stock === 1) { %>
                <div class="badge" style="position: absolute; left: 0; bottom: 0; z-index: 1; text-transform: uppercase; font-size: 13px; font-weight: 700; background: orange; color: #fff; padding: 3px 10px;">Jos jedna</div>
              <% } else { %>
                <div class="badge" style="position: absolute; left: 0; bottom: 0; z-index: 1; text-transform: uppercase; font-size: 13px; font-weight: 700; background: green; color: #fff; padding: 3px 10px;">Dostupno</div>
              <% } %>
              <div class="product-tumb" style="position: relative; display: flex; align-items: center; justify-content: center; height: 200px; background: #f0f0f0;">
                <% if (book.image) { %>
                  <img src="<%= book.image %>" alt="<%= book.title %>" style="max-width: 100%; max-height: 100%;">
                <% } else { %>
                  <img src="../assets/images/NemaKnjigek.svg.png" alt="Nema slike knjige" style="max-width: 100%; max-height: 100%;">
                <% } %>
              </div>
            </a>
            <div class="product-details" style="padding: 1.5rem;">
              <h5 class="product-title" style="font-weight: bold; color: black; font-size: 1.25rem;"><%= book.title %></h5>
              <h6 class="product-subtitle mb-3 text-muted" style="font-size: 0.875rem;"><%= book.authors %></h6>
              <p class="product-description" style="font-size: 0.875rem;"><%= book.description %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
