<div class="bg-image-container pt-5">
	<div class="form-container bg-white m-auto p-5">
		<form action="/auth/student-login" method="POST">
			<h3 class="text-center mb-3">Student Login</h3>
			<div class="mb-3">
				<label for="email" class="form-label">Email adresa</label>
				<input type="email" name="email" class="form-control" id="email" placeholder="Enter email.." required>
			</div>
	
			<div class="mb-3">
				<label for="password" class="form-label">Lozinka/Password</label>
				<input type="password" name="password" class="form-control" id="password" placeholder="Unesite lozinku tj. password.." required>
			</div>
			<button type="submit" class="btn d-block m-auto mt-4">Prijavi se</button>
			
			<div class="mt-3">
				<span>Nemate nalog?</span>
				<a href="/auth/student-signup">Regsitrujte se ovdje/a>
			</div>
			
			<div>
				<span>Da li ste Admin?</span>
				<a href="/auth/admin-login">Logujte se ovdje</a>
			</div>
			
		</form>
	</div>
</div>