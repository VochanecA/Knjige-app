<!DOCTYPE html>
<html>
<head>
  <title>Create User</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <h1>Create User</h1>
  
  <form action="/users" method="POST">
    <label for="id">ID:</label>
    <input type="number" name="id" required>
    <br>
    <label for="user_type_id">User Type ID:</label>
    <input type="number" name="user_type_id" required>
    <br>
    <label for="user_gender_id">User Gender ID:</label>
    <input type="number" name="user_gender_id" required>
    <br>
    <label for="name">Name:</label>
    <input type="text" name="name" maxlength="15" required>
    <br>
    <label for="JMBG">JMBG:</label>
    <input type="text" name="JMBG" maxlength="15" required>
    <br>
    <label for="email">Email:</label>
    <input type="email" name="email" maxlength="45" required>
    <br>
    <label for="username">Username:</label>
    <input type="text" name="username" maxlength="45" required>
    <br>
    <label for="email_verified_at">Email Verified At:</label>
    <input type="datetime-local" name="email_verified_at">
    <br>
    <label for="password">Password:</label>
    <input type="password" name="password" maxlength="25" required>
    <br>
    <label for="photo">Photo:</label>
    <input type="text" name="photo" maxlength="200">
    <br>
    <label for="remember_token">Remember Token:</label>
    <input type="text" name="remember_token" maxlength="100">
    <br>
    <label for="last_login_at">Last Login At:</label>
    <input type="datetime-local" name="last_login_at">
    <br>
    <label for="login_count">Login Count:</label>
    <input type="number" name="login_count" required>
    <br>
    <label for="created_at">Created At:</label>
    <input type="datetime-local" name="created_at" required>
    <br>
    <label for="updated_at">Updated At:</label>
    <input type="datetime-local" name="updated_at" required>
    <br>
    <label for="github">GitHub:</label>
    <input type="text" name="github">
    <br>
    <label for="active">Active:</label>
    <input type="radio" name="active" value="true" required> True
    <input type="radio" name="active" value="false" required> False
    <br>
    <button type="submit">Create User</button>
  </form>
</body>
<%- include('footer') %>
</html>
